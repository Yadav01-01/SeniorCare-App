<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_280sdp"
    android:layout_margin="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginVertical="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/plan_ic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_18sdp">

                <!-- Plan Title -->
                <TextView
                    android:id="@+id/subscriptionPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/basic_plan"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"/>

                <!-- Price and Duration -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/planAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/_7_00"
                        android:textColor="#EA5B60"
                        android:textSize="@dimen/_16ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/month"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"/>
                </LinearLayout>

                <!-- Feature List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/feature1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/limited_features"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_12ssp"
                        android:drawablePadding="@dimen/_10sdp"
                        app:drawableStartCompat="@drawable/plan_tick_ic" />

                    <TextView
                        android:id="@+id/feature2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/limited_features"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:drawablePadding="@dimen/_10sdp"
                        app:drawableStartCompat="@drawable/plan_tick_ic" />

                    <TextView
                        android:id="@+id/feature3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/limited_features"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:drawablePadding="@dimen/_10sdp"
                        app:drawableStartCompat="@drawable/plan_tick_ic" />

                    <TextView
                        android:id="@+id/feature4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/limited_features"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:drawablePadding="@dimen/_10sdp"
                        app:drawableStartCompat="@drawable/plan_tick_ic" />

                    <TextView
                        android:id="@+id/feature5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/limited_features"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:drawablePadding="@dimen/_10sdp"
                        app:drawableStartCompat="@drawable/plan_tick_ic" />

                </LinearLayout>

                <!-- Upgrade Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tapBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:paddingStart="@dimen/_25sdp"
                    android:paddingEnd="@dimen/_25sdp"
                    android:background="@drawable/locked_btn_bg"
                    android:text="@string/upgrade"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
