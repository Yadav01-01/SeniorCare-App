<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <ImageView
            android:id="@+id/crossIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/cross_ic"/>

        <ImageView
            android:id="@+id/tickImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bin_ic"
            android:layout_marginTop="@dimen/_10sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deleting_your_account"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/are_you_sure_you_want_to_delete"
            android:textColor="#303030"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:weightSum="2">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/deleteBtn"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_5sdp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins"
                android:textColor="@color/purple"
                android:textSize="16sp"
                android:id="@+id/cancelBtn"
                android:textStyle="bold"
                android:background="@drawable/cancel_bg"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5sdp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
