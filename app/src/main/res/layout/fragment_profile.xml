<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.fragment.mainscreen.ProfileFragment">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/back_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/profile"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"/>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/frame_bg"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/rll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_7sdp">

                    <!-- Profile Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profileImage"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_ic_image"
                        app:shapeAppearance="@style/RoundedImage" />

                    <!-- Camera Icon -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/editCameraBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:visibility="gone"
                        android:src="@drawable/cam_ic"
                        app:shapeAppearance="@style/RoundedImage" />
                </FrameLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/edit_btn_bg"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:text="@string/edit_profile"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_10ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_margin="@dimen/_2sdp"
                        android:elevation="6dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_40sdp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_bg"
                            android:padding="@dimen/_6sdp"
                            android:scaleType="centerInside"
                            android:src="@drawable/name_ic" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins"
                            android:text="@string/name"
                            android:textColor="#4E4E4E"
                            android:textSize="@dimen/_10ssp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Styled EditText -->
                            <EditText
                                android:id="@+id/edtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:gravity="center_vertical"
                                android:paddingTop="2dp"
                                android:paddingEnd="@dimen/_40sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:paddingStart="0dp"/>

                            <!-- End icon (edit pen) -->
                            <ImageView
                                android:id="@+id/editIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:visibility="gone"
                                android:layout_marginEnd="@dimen/_9sdp"
                                android:src="@drawable/edit_pen"/>
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:elevation="6dp"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_40sdp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_bg"
                            android:padding="@dimen/_6sdp"
                            android:scaleType="centerInside"
                            android:src="@drawable/email_ic" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins"
                            android:text="@string/email"
                            android:textColor="#4E4E4E"
                            android:textSize="@dimen/_10ssp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Styled EditText -->
                            <EditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:gravity="center_vertical"
                                android:paddingTop="2dp"
                                android:paddingEnd="@dimen/_50sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:paddingStart="0dp"/>

                            <!-- End icon (edit pen) -->
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/emailVerify"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="end|top"
                                android:visibility="gone"
                                android:fontFamily="@font/poppins"
                                android:text="@string/verify"
                                android:textSize="@dimen/_7ssp"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:background="@drawable/locked_btn_bg"
                                android:layout_marginEnd="@dimen/_9sdp" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_margin="@dimen/_2sdp"
                        android:elevation="6dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_40sdp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_bg"
                            android:padding="@dimen/_6sdp"
                            android:scaleType="centerInside"
                            android:src="@drawable/call_ic" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins"
                            android:text="@string/phone"
                            android:textColor="#4E4E4E"
                            android:textSize="@dimen/_10ssp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Styled EditText -->
                            <EditText
                                android:id="@+id/edtPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:inputType="phone"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:gravity="center_vertical"
                                android:paddingTop="2dp"
                                android:paddingEnd="@dimen/_50sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:paddingStart="0dp"/>

                            <!-- End icon (edit pen) -->
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/phoneVerify"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="end|top"
                                android:visibility="gone"
                                android:fontFamily="@font/poppins"
                                android:text="@string/verify"
                                android:textSize="@dimen/_7ssp"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:background="@drawable/locked_btn_bg"
                                android:layout_marginEnd="@dimen/_9sdp" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:elevation="6dp"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_40sdp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_bg"
                            android:padding="@dimen/_6sdp"
                            android:scaleType="centerInside"
                            android:src="@drawable/loc_ic" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins"
                            android:text="@string/location_"
                            android:textColor="#4E4E4E"
                            android:textSize="@dimen/_10ssp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Styled EditText -->
                            <EditText
                                android:id="@+id/edtLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:gravity="center_vertical"
                                android:paddingTop="2dp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_40sdp"
                                android:paddingStart="0dp"/>

                            <!-- End icon (edit pen) -->
                            <ImageView
                                android:id="@+id/locationEditIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:visibility="gone"
                                android:layout_marginEnd="@dimen/_9sdp"
                                android:src="@drawable/edit_pen"/>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/button_bg"
                    android:fontFamily="@font/poppins"
                    android:text="@string/save_changes"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />


            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


